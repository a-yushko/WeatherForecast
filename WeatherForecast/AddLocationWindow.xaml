<Window x:Class="WeatherForecast.AddLocationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherForecast"
        mc:Ignorable="d"
        Title="Add Location" Height="100" Width="300"
        WindowStartupLocation="CenterOwner">
    <StackPanel Orientation="Horizontal"
                Height="20"
                Margin="11">
        <TextBlock Text="Type to find:"/>
        <ComboBox IsEditable="True"
                  Margin="11 0">
            <ComboBox.Items>
                <ComboBoxItem>Kyiv</ComboBoxItem>
                <ComboBoxItem>Lviv</ComboBoxItem>
                <ComboBoxItem>London</ComboBoxItem>
            </ComboBox.Items>
        </ComboBox>
        <Button Content="Add"
                Click="Add"/>
    </StackPanel>
</Window>
